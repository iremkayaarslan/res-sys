#include <iostream>
#include <vector>
#include <string>

using namespace std;

// Masa sınıfı
class Masa {
public:
    int masaNo;
    bool bos;

    Masa(int no) : masaNo(no), bos(true) {}
};

// Rezervasyon sınıfı
class Rezervasyon {
public:
    string isim;
    int masaNo;
    string tarih;

    Rezervasyon(string isim, int masaNo, string tarih) : isim(isim), masaNo(masaNo), tarih(tarih) {}
};

// Restoran sınıfı
class Restoran {
private:
    vector<Masa> masalar;
    vector<Rezervasyon> rezervasyonlar;

public:
    Restoran(int masaSayisi) {
        for (int i = 1; i <= masaSayisi; ++i) {
            masalar.push_back(Masa(i));
        }
    }

    // Boş masaları göster
    void bosMasalarıGoster() {
        cout << "Boş Masalar:" << endl;
        for (const Masa& masa : masalar) {
            if (masa.bos) {
                cout << masa.masaNo << endl;
            }
        }
    }

    // Rezervasyon yap
    void rezervasyonYap() {
        string isim, tarih;
        int masaNo;

        cout << "Rezervasyon yapmak için bilgileri girin:" << endl;
        cout << "İsim: ";
        cin >> isim;
        cout << "Masa No: ";
        cin >> masaNo;
        cout << "Tarih: ";
        cin >> tarih;

        for (Masa& masa : masalar) {
            if (masa.masaNo == masaNo && masa.bos) {
                masa.bos = false;
                rezervasyonlar.push_back(Rezervasyon(isim, masaNo, tarih));
                cout << "Rezervasyon yapıldı." << endl;
                return;
            }
        }
        cout << "Bu masa zaten rezerve edilmiş veya mevcut değil." << endl;
    }

    // Rezervasyonları göster
    void rezervasyonlarıGoster() {
        cout << "Rezervasyonlar:" << endl;
        for (const Rezervasyon& rezervasyon : rezervasyonlar) {
            cout << "İsim: " << rezervasyon.isim << ", Masa No: " << rezervasyon.masaNo << ", Tarih: " << rezervasyon.tarih << endl;
        }
    }
};

int main() {
    int masaSayisi;
    cout << "Restoranın masa sayısını girin: ";
    cin >> masaSayisi;

    Restoran restoran(masaSayisi); // Belirtilen masa sayısıyla bir restoran oluştur

    restoran.bosMasalarıGoster(); // Boş masaları göster

    restoran.rezervasyonYap(); // Kullanıcıdan rezervasyon bilgilerini al ve rezervasyon yap

    restoran.bosMasalarıGoster(); // Güncellenmiş boş masaları göster

    restoran.rezervasyonlarıGoster(); // Rezervasyonları göster

    return 0;
}
